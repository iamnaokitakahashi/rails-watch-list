<%# /lists/id/bookmarks/new %>

<h1>Create New Bookmark</h1>

<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.association :movie, collection: Movie.all, label_method: :title, value_method: :id, include_blank: true, label: "Select a Movie" %>

  <%= f.input :comment, label: "Comment" %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>


<%= link_to 'Back to List', list_path(@list), class: 'btn btn-secondary' %>
