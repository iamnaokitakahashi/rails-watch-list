<%# /list/new %>
<h1>Create New List</h1>

<%= form_with model: @list, url: lists_path, method: :post do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.submit 'Create List' %>
  </div>
<% end %>

<%= link_to 'Back to Lists', lists_path(@list), class: 'btn btn-secondary' %>
